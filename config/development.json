{
    
    "express": {
        "view engine": "dust",
        "view cache": false,
        "views": "path:./public/templates"
    },


    "view engines": {
        "dust": {
            "module": "engine-munger",
            "renderer": {
                "method": "dust",
                "arguments": [{
                    "cache": false,
                    "helpers": [
                        "ppdustjs-filters-secure",
                        "dustjs-helpers",
                        "dusthelpers-supplement"
                    ]
                }, {
//INFO: Uncomment the following line to trigger pisces
//                  "enableMetadata": true,
                    "views": "config:express.views",
                    "view engine": "config:express.view engine",
                    "i18n": "config:i18n"
                }]
            }
        }
    },

    "middleware": {

        "devtools": {
            "enabled": true,
            "priority": 35,
            "module": {
                "name": "construx",
                "arguments": [
                    "path:./public",
                    "path:./.build",
                    {
                        
                        
                        "css": {
                            "module": "construx-less",
                            "files": "/css/**/*.css"
                        },
                        
                        "copier": {
                            "module": "construx-copier",
                            "files": "**/*"
                        }
                    }
                ]
            }
        }
    }
}
